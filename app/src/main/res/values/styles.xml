<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- default color of ANY text (menu items, labels, etc. ) unless color attribute is overridden -->
        <item name="android:textColorPrimary">@color/primaryTextColor</item>

        <!-- color of the default background -->
        <item name="android:windowBackground">@color/backgroundColor</item>

    </style>

    <!--- coiny text style -->

    <style name="CoinyText" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:lineSpacingExtra">4sp</item>
    </style>


    <style name="CoinyText.CaptionSmall" parent="CoinyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CoinyText.Caption" parent="CoinyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CoinyText.CaptionAlternate" parent="CoinyText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CoinyText.Title" parent="CoinyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CoinyText.TitleAlternate" parent="CoinyText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CoinyText.Body" parent="CoinyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CoinyText.BodyAlternate" parent="CoinyText">
        <item name="android:textColor">@color/tertiaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CoinyText.BodyTertiary" parent="CoinyText">
        <item name="android:textColor">@color/tertiaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CoinyText.Body1" parent="CoinyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CoinyText.Body1Alternate" parent="CoinyText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CoinyText.Body2" parent="CoinyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CoinyText.Body3" parent="CoinyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CoinyText.Big" parent="CoinyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="CoinyText.Huge" parent="CoinyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="SearchSwitchTheme">
        <item name="colorControlActivated">@color/switchColor</item>
    </style>

</resources>
